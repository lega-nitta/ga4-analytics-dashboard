# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ga4_dashboard

# Redis
REDIS_URL=redis://localhost:6379

# GA4 API（いずれか必須。未設定だと「GA4認証情報が設定されていません」になります）
# 方法1: アクセストークンを直接
# GA4_ACCESS_TOKEN=ya29....
# 方法2: サービスアカウント（推奨。JSONを1行で）
# GA4_SERVICE_ACCOUNT_KEY={"type":"service_account",...}
# 方法3: OAuth2
# GA4_CLIENT_ID=xxx
# GA4_CLIENT_SECRET=xxx
# GA4_REFRESH_TOKEN=xxx
GA4_API_KEY=your_ga4_api_key
GA4_PROPERTY_ID=your_property_id

# AI API
GEMINI_API_KEY=your_gemini_api_key

# Slack
SLACK_WEBHOOK_URL=your_slack_webhook_url

# アプリの公開URL（Slack の「詳細を見る」リンクなど。開発 Docker は 3003、本番は https://ドメイン）
NODE_ENV=development
APP_URL=http://localhost:3003
NEXT_PUBLIC_APP_URL=http://localhost:3003
